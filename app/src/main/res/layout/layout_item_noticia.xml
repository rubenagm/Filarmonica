<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="145dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_buy"
                android:scaleType="fitXY"
                android:id="@+id/lista_noticia_imagen"
                android:layout_width="140dp"
                android:layout_height="90dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="#E31836"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="LEER MÃS"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="145dp">
            <TextView
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Titulo"
                android:id="@+id/lista_noticias_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000000"
                android:textSize="13sp"
                android:text="Fecha"
                android:id="@+id/lista_noticas_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:text="Contenido"
                android:id="@+id/lista_noticias_contenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:alpha="0.3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />

</LinearLayout>